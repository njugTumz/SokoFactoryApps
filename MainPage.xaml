<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.MainPage">
  <VerticalStackLayout>
    <Label Text="To-Do List" />
    <Grid>
      <Entry />
      <Button Text="Add" Grid.Column="1" />
    </Grid>
    <ScrollView>
      <VerticalStackLayout>
        <Grid>
          <CheckBox />
          <Label Text="Walk the dog" Grid.Column="1" />
        </Grid>
        <Grid>
          <CheckBox />
          <Label Text="Buy groceries" Grid.Column="1" />
        </Grid>
        <Grid>
          <CheckBox />
          <Label Text="Study for exams" Grid.Column="1" />
        </Grid>
      </VerticalStackLayout>
    </ScrollView>
  </VerticalStackLayout>
</ContentPage>
